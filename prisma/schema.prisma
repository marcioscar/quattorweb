generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



type TreinosExercicios {
  Repeticoes String
  carga      String
  execid     String?
  nome       String
  obs        String
  video      String?
}

type HistoricoTreinos {
  data   DateTime @db.Date
  treino String?
}

type Planejados {
  data  DateTime? @db.Date
  treinoP String? 
  feito Boolean?
  dia String[]
  id String?
}
model historico {
  id      String             @id @default(auto()) @map("_id") @db.ObjectId
  aluno   Int                @unique
  historico String?
  patologias String?
  nivel String?
  treinos HistoricoTreinos[]
  planejados Planejados[]
}

model treinos {
  id         String              @id @default(auto()) @map("_id") @db.ObjectId
  exercicios TreinosExercicios[]
  grupo      String
  semana     Int
}

model classes {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  start  String
  classe String
  finish String
  turma  String
  icon   String
  plano  String?
  days   Int[]
}

type aluno {
  nome      String   
  idMember  Int
  photo     String
}

 model reservas {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  data    DateTime  @db.Date
  identificador String  @unique
  aula    String
  Hora    String
  alunos  aluno[]
 }